@model TaCultivoViewModel

<h2>Detalles del Cultivo</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre Cultivo</dt>
        <dd class="col-sm-10">@Model.NombreCultivo</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Fecha Inicio</dt>
        <dd class="col-sm-10">@Model.FechaInicioProyectado.ToShortDateString()</dd>

        <dt class="col-sm-2">Fecha Fin</dt>
        <dd class="col-sm-10">@Model.FechaFinProyectado.ToShortDateString()</dd>

        <dt class="col-sm-2">Gasto Proyectado</dt>
        <dd class="col-sm-10">@Model.GastoProyectado.ToString("C")</dd>

        <dt class="col-sm-2">Distrito</dt>
        <dd class="col-sm-10">@Model.NombreDistrito</dd>

        <dt class="col-sm-2">Provincia</dt>
        <dd class="col-sm-10">@Model.NombreProvincia</dd>

        <dt class="col-sm-2">Extensión</dt>
        <dd class="col-sm-10">@Model.DescripcionExtension</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
