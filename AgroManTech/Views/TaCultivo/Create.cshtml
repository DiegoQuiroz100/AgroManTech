@model TaCultivo

<form asp-action="Create" method="post">
    <div>
        <label>Nombre Cultivo</label>
        <input asp-for="NombreCultivo" class="form-control" />
    </div>
    <div>
        <label>Descripción</label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    <div>
        <label>Fecha Inicio</label>
        <input asp-for="FechaInicioProyectado" type="date" class="form-control" />
    </div>
    <div>
        <label>Fecha Fin</label>
        <input asp-for="FechaFinProyectado" type="date" class="form-control" />
    </div>
    <div>
        <label>Gasto Proyectado</label>
        <input asp-for="GastoProyectado" type="number" class="form-control" />
    </div>
    <div>
        <label>Distrito</label>
        <select asp-for="CodigoDistrito" asp-items="@(new SelectList(ViewBag.Distritos, "Codigo", "Nombre"))" class="form-control">
            <option value="">Seleccione un Distrito</option>
        </select>
    </div>
    <div>
        <label>Extensión</label>
        <select asp-for="CodigoExtension" asp-items="@(new SelectList(ViewBag.Extensions, "Codigo", "Nombre"))" class="form-control">
            <option value="">Seleccione una Extensión</option>
        </select>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>
