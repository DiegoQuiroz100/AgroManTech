@model IEnumerable<TaCultivoViewModel>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">Listado de Cultivos</h2>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo Cultivo</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre Cultivo</th>
                <th>Descripción</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Distrito</th>
                <th>Provincia</th>
                <th>Extensión</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cultivo in Model)
            {
                <tr>
                    <td>@cultivo.NombreCultivo</td>
                    <td>@cultivo.Descripcion</td>
                    <td>@cultivo.FechaInicioProyectado.ToShortDateString()</td>
                    <td>@cultivo.FechaFinProyectado.ToShortDateString()</td>
                    <td>@cultivo.NombreDistrito</td>
                    <td>@cultivo.NombreProvincia</td>
                    <td>@cultivo.DescripcionExtension</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@cultivo.CodigoCultivo" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@cultivo.CodigoCultivo" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
