@model TaCultivoViewModel

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h3>Eliminar Cultivo</h3>
    </div>
    <div class="card-body">
        <h4 class="text-center">¿Está seguro de que desea eliminar este cultivo?</h4>
        <dl class="row">
            <dt class="col-sm-3">Nombre Cultivo</dt>
            <dd class="col-sm-9">@Model.NombreCultivo</dd>

            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="CodigoCultivo" />
            <div class="text-center">
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>
